# =============================================================================
# Talk Talk Vending Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# OpenAI API (Required)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
# Options: development, staging, production
ENVIRONMENT=development

# Enable debug mode (set to false in production)
DEBUG=true

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# JSON array of allowed origins
#
# Development:
# ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3456"]
#
# Production (single domain):
# ALLOWED_ORIGINS=["https://yourdomain.com"]
#
# Production (multiple domains):
# ALLOWED_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com","https://www.yourdomain.com"]
#
# ⚠️ WARNING: Never use ["*"] in production - it allows any website to call your API
ALLOWED_ORIGINS=["http://localhost:3456"]
